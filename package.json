{
    "name": "expressjs-boilerplate",
    "version": "1.0.0",
    "description": "Ligtweight boilerplate to get started on you next side project",
    "author": "Siddhanta Gupta",
    "license": "MIT",
    "keywords": [],
    "main": "dist/src/index.js",
    "type": "module",
    "scripts": {
        "clean": "rimraf node_modules",
        "build": "rimraf dist && tsc && tsc-alias && copyfiles .env ./dist",
        "build:watch": "npm run build && concurrently --kill-others --raw \"tsc -w\" \"tsc-alias -w\" ",
        "start": "node dist/src/index.js",
        "start:watch": "npm run build && concurrently --kill-others \"tsc -w\" \"tsc-alias -w\" \"nodemon dist/src/index.js\"",
        "start:debug": "npm run build && concurrently --kill-others \"tsc -w\" \"tsc-alias -w\" \"nodemon --inspect=9229 dist/src/index.js\"",
        "migrate:make": "knex migrate:make --cwd database",
        "migrate:latest": "knex migrate:latest --cwd database",
        "migrate:rollback": "knex migrate:rollback --cwd database"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "compression": "^1.7.4",
        "copyfiles": "^2.4.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "http-status": "^1.7.3",
        "jsonwebtoken": "^9.0.2",
        "knex": "^3.1.0",
        "morgan": "^1.10.0",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.11.3",
        "postgres": "^3.4.3",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0",
        "ulid": "^2.3.0",
        "winston": "^3.11.0",
        "zod": "^3.22.4",
        "zod-validation-error": "1.5.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.11.16",
        "@types/passport": "^1.0.16",
        "@types/passport-jwt": "^4.0.1",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "concurrently": "^8.2.2",
        "nodemon": "^3.0.3",
        "rimraf": "^5.0.5",
        "tsc-alias": "^1.8.8",
        "typescript": "^5.3.3"
    }
}
