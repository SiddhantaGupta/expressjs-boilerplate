{
    "name": "expressjs-boilerplate",
    "version": "1.0.0",
    "description": "Ligtweight boilerplate to get started on you next side project",
    "author": "Siddhanta Gupta",
    "license": "MIT",
    "keywords": [],
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "rimraf dist && tsc && tsc-alias",
        "build:watch": "npm run build && concurrently --kill-others --raw \"tsc -w\" \"tsc-alias -w\" ",
        "start": "node dist/index.js",
        "start:watch": "concurrently --kill-others \"tsc -w\" \"tsc-alias -w\" \"nodemon dist/index.js\"",
        "start:debug": "concurrently --kill-others \"tsc -w\" \"tsc-alias -w\" \"nodemon --inspect=9229 dist/index.js\""
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.4.1",
        "express": "^4.18.2",
        "http-status": "^1.7.3",
        "morgan": "^1.10.0",
        "winston": "^3.11.0",
        "zod": "^3.22.4",
        "zod-validation-error": "1.5.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.11.16",
        "concurrently": "^8.2.2",
        "nodemon": "^3.0.3",
        "rimraf": "^5.0.5",
        "tsc-alias": "^1.8.8",
        "typescript": "^5.3.3"
    }
}
